<%= form_with(model: disciplina) do |form| %>
  <div class="panel panel-primary">
    <div class="panel-heading" id="title_form">Disciplina
    </div>
    <div class="panel-body">
      <% if disciplina.errors.any? %>
        <div style="color: red">
          <h2>Atenção aos erros abaixo:</h2>

          <ul>
            <% disciplina.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :nome, style: "display: block" %>
        <%= form.text_field :nome %>
      </div>

      <div class="panel-footer">

        <%= form.submit 'Salvar' %>
        <div class="pull-right">
          <%= link_to "Voltar a Lista", disciplina_path %>
        </div>
      </div>
    </div>
  </div>

<% end %>
